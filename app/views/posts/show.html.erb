<center>
<div class="row">
	<div class="jumbotron col-md-12">
		<div class="row">

		<% if user_signed_in? %>
			
			<% if @post.user_id == current_user.id %>
					
				<%= link_to "Edit", edit_post_path(@post)%>
				<%= link_to "Delete", post_path(@post), method: :delete,
						data: {confirm: "Are you sure you want to delete this?"}%>
			<%end%>
		<%end%>
		</div>
		<div class="row">
			<%= image_tag @post.post_img.url(:post_show), class: "post_show"%>
		</div>
	
			<h2><b><%= @post.user.email%>:</b> <%= @post.caption%></h3>
		
			<p><%= render @post.remarks %></p>	
		</div>

		<%if user_signed_in? %>
			<%= link_to "Comment", new_post_remark_path(@post) %>
		<%end%><br>
		<%= link_to "Back", root_path %>
	</div>
</div>
</center>